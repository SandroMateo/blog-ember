<form>
  <h4>Add a New Post</h4>
  <div class="form-group">
    <label for="title">Title</label>
    {{input type="text" value=title id="title" placeholder="Enter blog title"}}
  </div>
  <div class="form-group">
    <label for="author">Author</label>
    {{input type="text" value=author id="author" placeholder="Enter your name"}}
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    {{textarea type="text" value=content id="content" placeholder="Write your blog here"}}
  </div>
  <button class="btn" {{action 'save'}}>Post</button>
</form>

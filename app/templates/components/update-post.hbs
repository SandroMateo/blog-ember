<form>
  <div class="form-group">
    <label for="title">Title</label>
    {{input type="text" value=title placeholder=post.title}}
  </div>
  <div class="form-group">
    <label for="author">Author</label>
    {{input type="text" value=author placeholder=post.author}}
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    {{textarea type="text" value=content placeholder=post.content}}
  </div>
  <button class="btn" {{action 'update' post}}>Post</button>
</form>
